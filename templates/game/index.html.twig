{% extends 'base.html.twig' %}

{% block title %}Liste des jeux{% endblock %}

{% block body %}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Liste des jeux</h1>
        <img src="{{ asset('images/Nintendo_64_Logo.svg.png') }}" alt="Logo" style="width: 100px;">
    </div>

    <div class="mb-3 text-end">
        <a href="{{ path('game_create') }}" class="btn btn-success">➕ Ajouter un jeu</a>
    </div>

    {% if pagination|length > 0 %}
        <ul class="list-group mb-4">
            {% for game in pagination %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="{{ path('game_show', {id: game.id}) }}" class="text-decoration-none text-dark fw-bold">
                        {{ game.title }}
                    </a>
                    <a href="{{ path('game_edit', {id: game.id}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="alert alert-warning">Aucun jeu trouvé.</div>
    {% endif %}

    <div class="pagination justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
